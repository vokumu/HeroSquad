{{#partial "title" }}
    Create a Custom Greeting!
{{/partial}}

<!--form.hbs.-->
{{#partial "content"}}

    <h1>Fill in your name and your friend's name to create your custom greeting!</h1>
    <form action='/greeting_card'>
        <div class="form-group">
            <label for="name">Sqaud Name</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="maxSize">Maximum Size</label>
            <input id="maxSize" name="maxSize" class="form-control" type="number">
        </div>
        <div class="form-group">
            <label for="fightingCause">Fighting Cause</label>
            <input id="fightingCause" name="fightingCause" class="form-control" type="text">
        </div>
        <button type="submit" class="btn">Go!</button>
    </form>
    <!--form.hbs.-->
{{/partial}}

